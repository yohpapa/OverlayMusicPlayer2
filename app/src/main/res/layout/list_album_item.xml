<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_button_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView android:id="@+id/image_artwork"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_image_artwork"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/list_artwork_size"
        android:layout_height="@dimen/list_artwork_size" />
        
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/list_layout_margin"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/text_title"
            android:textSize="@dimen/list_font_size"
            android:textColor="@color/list_font"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView android:id="@+id/text_artist"
            android:textSize="@dimen/list_sub_font_size"
            android:textColor="@color/list_sub_font"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
</LinearLayout>
